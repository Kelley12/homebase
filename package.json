{
  "name": "api-home-base",
  "version": "1.0.0",
  "description": "Simple web ",
  "author": "Blake Kelley <blake.t.kelley@gmail.com> (https://bkelley.dev)",
  "main": "index.js",
  "scripts": {
    "dev": "npm run build-dev || true && concurrently --kill-others 'npm run watch'",
    "build-dev": "npm ci && tsc -b && npm run public",
    "public": "cp -rf src/public dist",
    "watch": "tsc-watch --onSuccess 'npm run nodemon'",
    "nodemon": "nodemon -e js,ts dist/index.js",
    "build": "tsc -b && npm run public",
    "start": "node dist/index.js",
    "test": "npx nyc@latest mocha 'dist/**/test/*.js'",
    "dev-test": "mocha 'dist/**/test/*.js' --watch",
    "preversion": "npm run build && npm test"
  },
  "keywords": [],
  "license": "MIT",
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "delay": "1000"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "eventemitter2": "^6.0.0",
    "express": "^5.0.0-alpha.7",
    "fs-extra": "^8.1.0",
    "pg": "^7.15.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.22",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/chai": "^4.2.7",
    "@types/compression": "^1.0.1",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/fs-extra": "^8.0.1",
    "@types/mocha": "^5.2.7",
    "@types/node": "^13.1.0",
    "@types/pg": "^7.14.0",
    "chai": "^4.2.0",
    "concurrently": "^5.0.2",
    "mocha": "^6.2.2",
    "nodemon": "^2.0.2",
    "tsc-watch": "^4.0.0",
    "tslint": "^5.20.1",
    "typescript": "^3.7.4"
  }
}
